{
  "name": "Post Categories",

  // text
  // textarea
  // checkbox
  // editor
  // media
  // date

  "fields": [
    {
      "type": "text",
      "name": "name",
      "label": "Name",

      "show_on_index": true,

      "rules": {
        "required": true,
        "nullable": false,
        "url": false,
        "max": 255
      },

      "options": {}
    },

    {
      "type": "text",
      "name": "slug",
      "label": "Slug",

      "show_on_index": false,

      "rules": {
        "required": true,
        "nullable": false,
        "url": false,
        "max": 255
      },

      "options": {}
    },

    {
      "type": "text",
      "name": "description",
      "label": "Description",

      "show_on_index": false,

      "rules": {
        "required": true,
        "nullable": false,
        "url": false
      },

      "options": {}
    },

    {
      "type": "text",
      "name": "url",
      "label": "Website URL",

      "show_on_index": false,

      "rules": {
        "required": false,
        "nullable": true,
        "url": true,
        "max": 255
      },

      "options": {}
    },

    {
      "type": "image",
      "name": "banner_image",
      "label": "Banner Image",

      "show_on_index": false,

      "rules": {
        "required": true, // false by default
        "nullable": false, // false by default
        "url": false
      },

      "options": {
        "accepted_extensions": "image", // any by default
        "group": "image",
        "conversions": ["1400x600"]
      }
    }
  ],

  "features": [
    {
      "type": "order",
      "options": {
        // inferred by default
        "order_column_name": "order"
      }
    },

    {
      "type": "slug",
      "options": {
        "generate_from_field": "name",
        "save_to_field": "slug"
      }
    },

    {
      "type": "seo", //
      "options": {}
    },

    {
      "type": "media",
      "options": {
        "groups": [
          {
            "name": "image",
            "conversion": "1400x600"
          }
        ],

        "conversions": [
          {
            "name": "1400x600",
            "width": 1400,
            "height": 600
          }
        ]
      }
    },

    {
      "type": "draftable",
      "options": {
        // inferred by default [published_at]
        "published_at_field": "published_at"
      }
    },

    {
      "type": "linkable",
      "options": {
        "url_field": "slug",
        "label_field": "title",
        "search_query_field": "title"
      }
    }
  ]
}
