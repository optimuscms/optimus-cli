{{#each features}}
    {{#if-type-is "HasMedia"}}
        {{#each options.conversions}}
            Conversion::register(
                '{{name}}',
                function (Image $image) {
                    return $image->fit({{width}}, {{height}});
                }
            );
        {{/each}}
    {{/if-type-is}}
{{/each}}

